# Server Configuration
HOST=0.0.0.0
PORT=8000

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Qdrant Vector Database
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=your_qdrant_api_key_here

# LangSmith Tracing (Optional)
LANGCHAIN_TRACING_V2=false
LANGCHAIN_API_KEY=your_langchain_api_key_here
LANGCHAIN_PROJECT=agentic-ai

# Model Provider Selection
# Options: 'local' or 'claude'
DEFAULT_MODEL_PROVIDER=local

# Claude Anthropic Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
CLAUDE_MODEL=claude-3-5-sonnet-20241022

# Local Model Configuration (GPT-OSS-20B)
LOCAL_MODEL_URL=http://localhost:8787/v1
LOCAL_MODEL_NAME=gpt-oss-20b
LOCAL_MODEL_API_KEY=

# Embedding Settings
# Options: 'local' or 'openai'
EMBEDDING_PROVIDER=local
EMBEDDING_BASE_URL=http://localhost:8142/v1
EMBEDDING_MODEL=embedding-model
EMBEDDING_DIMENSION=1024
EMBEDDING_API_KEY=

# Model Settings (Generic/Fallback)
MODEL_NAME=gpt-4-turbo-preview
TEMPERATURE=0.7
MAX_TOKENS=2000

# RAG (Retrieval-Augmented Generation) Settings
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
TOP_K_RETRIEVAL=5
RAG_SCORE_THRESHOLD=0.7

# File Upload Settings
MAX_FILE_SIZE=2097152
ALLOWED_FILE_TYPES=pdf,docx,doc,csv,txt,png,jpg,jpeg
UPLOAD_DIR=/tmp/uploads

# Logging Settings
LOG_LEVEL=INFO
LOG_DIR=logs
ENABLE_FILE_LOGGING=true
ENABLE_REQUEST_LOGGING=true

# Redis Cache Settings
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=1
REDIS_TTL=3600
ENABLE_CACHE=true
